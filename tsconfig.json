{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": false,
    "outDir": "./build",
    "sourceMap": true,
    "lib": ["ES2022"]
  },
  "include": ["./src/*.ts"]
}
